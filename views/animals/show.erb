<h1>Animal: <%= @animal.name %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>D.O.B</th>
    <th>Type</th>
    <th>Vet assigned to</th>
    <th>Owner</th>
    <th>Notes</th>
  </tr>
  <tr>
    <td><%= @animal.name %></td>
    <td><%= @animal.d_o_b %></td>
    <td><%= @animal.type %></td>
    <td><%= Vet.find(@animal.vet_id).name %></td>
    <td><%= Owner.find(@animal.owner_id).name %></td>
    <td><%= @animal.notes %></td>



  </tr>
</table>

<a href="/animals/<%= @animal.id %>/edit">Edit</a>

<form action="/animals/<%= @animal.id %>/delete" method="POST">
<input type="submit" value="Delete">
</form>
